{
  // Этот файл настраивает развертывание проекта на Vercel.
  // Vercel автоматически определяет Next.js, но явное указание фреймворка
  // и команды сборки является хорошей практикой для предсказуемости.
  "framework": "nextjs",

  // Команда для сборки проекта. Vercel выполнит ее перед развертыванием.
  "buildCommand": "pnpm build",

  // Здесь можно добавить другие конфигурации, например:
  // "headers": [{ "source": "/(.*)", "headers": [...] }],
  // "redirects": [{ "source": "/old-path", "destination": "/new-path" }]
}
